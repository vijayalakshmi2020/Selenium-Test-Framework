pipeline {
    agent any

    environment {
        // Manually pointing to your Maven bin folder
        // CHANGE THIS to your actual Maven installation path
        MAVEN_BIN = 'C:\\apache-maven-3.9.6\\bin' 
    }

    stages {
        stage('Environment Check') {
            steps {
                // This adds Maven to the path just for this session
                withEnv(["PATH+MAVEN=${env.MAVEN_BIN}"]) {
                    bat 'mvn -version'
                }
            }
        }

        stage('Build & Execute Tests') {
            steps {
                dir('OrangeHRMProject') {
                    // Use withEnv here as well to ensure 'mvn' is found
                    withEnv(["PATH+MAVEN=${env.MAVEN_BIN}"]) {
                        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                            bat 'mvn clean test -Dbrowser=chrome -Dheadless=true'
                        }
                    }
                }
            }
        }
        
        // ... Publish Reports stage remains the same
    }
}