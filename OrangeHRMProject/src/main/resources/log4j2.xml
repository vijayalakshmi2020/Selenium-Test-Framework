<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<!-- Console appender-->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<!-- General File appender-->
		<File name="FileLogger" fileName="logs/app.log">
			<!-- exclude error and fatal logs-->
			<Filters>
				<ThresholdFilter Level="error"
					onMatch="DENY" onMismatch="ACCEPT" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n" />
		</File>
		<!-- Error file appender-->
		<File name="ErrorFileLogger" fileName="logs/errors.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n" />
			<!-- include error and fatal logs-->
			<Filters>
				<ThresholdFilter level="ERROR" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
		</File>
	</Appenders>

	<Loggers>
		<logger name="com.orangehrm"  level="trace" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileLogger" />
			<AppenderRef ref="ErrorFileLogger" />
		</logger>
	</Loggers>
</Configuration>